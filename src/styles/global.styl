@import 'variable.styl'
@import 'component.styl'

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  width: 100%;
  height: 100%;
  font-size: 14px;
  font-family: '微软雅黑';
}
  
ul {
  list-style: none;
}

button {
  font-size: 14px;
  border: none;
  border-radius: 4px;
  line-height: 1;
  outline: none;
  cursor: pointer;
}

a {
  text-decoration: none;
  color: #000;
}

.list-prefix {
  position: relative;
  padding-left: 20px;
  line-height: 32px;
  font-size: 14px;
  
  &::before {
    content: '';
    position: absolute;
    top: 12px;
    left: 0;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #0ea391;
  }
}
